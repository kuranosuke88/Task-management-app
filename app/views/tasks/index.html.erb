<% provide(:title, "#") %>

<h1><%= "#" %>のタスク一覧ページ</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= link_to "タスク新規作成", new_task_path, class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hover" id="table-tasks">
      <thead>
        <tr>
          <th><%= Task.human_attribute_name :name %></th>
          <th><%= Task.human_attribute_name :created_at %></th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>    
</div>

