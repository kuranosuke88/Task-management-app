<% provide(:title, @user.name) %>

<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered", id="table-user">
      <tbody>
      <tr>
        <th class="active"><%= Task.human_attribute_name :id %></th>
        <td class="col-md-10"><%= @task.id %></td>
      </tr>
      <tr>
        <th class="active"><%= Task.human_attribute_name :name %></th>
        <td><%= @task.name %></td>
      </tr>
      <tr>
        <th class="active"><%= Task.human_attribute_name :detail %></th>
        <td>
          <%= auto_link(safe_join(@task.detail.split("\n"), tag(:br))) %>
        </td>
      </tr>
      <tr>
        <th class="active"><%= Task.human_attribute_name :created_at %></th>
        <td><%= l(@task.created_at, format: :long) %></td>
      </tr>
      <tr>
        <th class="active"><%= Task.human_attribute_name :updated_at %></th>
        <td><%= l(@task.updated_at, format: :long) %></td>
      </tr>
      </tbody>
    </table>
    
      <td>
        <%= link_to "編集", edit_user_task_path, class: "btn btn-lg btn-success" %>
        <%= link_to "削除", user_task_path, method: :delete,
        data: { confirm: "「#{@task.name}」を削除します。よろしいですか？" }, class: "btn btn-lg btn-danger" %>
      </td>
      
  </div>    
</div>